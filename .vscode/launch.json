{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/client/src"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "App",
      "program": "${workspaceFolder}\\dist\\index.js",
      "autoAttachChildProcesses": true,
      "console": "internalConsole",
      "outputCapture": "std",
      "preLaunchTask": "Compile Project",
      "env": {
        "NODE_ENV": "dev",
        "NOTIFYBC_WORKER_PROCESS_COUNT": "1"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": ["--timeout", "999999", "dist/__tests__/"],
      "autoAttachChildProcesses": true,
      "console": "internalConsole",
      "preLaunchTask": "Compile Project"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Doc",
      "cwd": "${workspaceFolder}/docs",
      "program": "node_modules/vuepress/cli.js",
      "args": ["dev"],
      "console": "internalConsole",
      "envFile": "${workspaceFolder}/docs/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Client",
      "cwd": "${workspaceFolder}/client",
      "program": "${workspaceFolder}/client/node_modules/@vue/cli-service/bin/vue-cli-service.js",
      "args": ["serve"]
    }
  ],
  "compounds": [
    {
      "name": "App&Doc",
      "configurations": ["App", "Doc"]
    },
    {
      "name": "App&Client",
      "configurations": ["App", "Client", "Launch Chrome"]
    }
  ]
}
