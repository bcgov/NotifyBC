{
  "name": "notify-bc",
  "version": "2.4.0",
  "dbSchemaVersion": "0.8.0",
  "description": "A versatile notification API server",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "scripts": {
    "build": "yarn build:server",
    "build:server": "lb-tsc && copyfiles -su 1 -e \"**/*.ts\" \"src/**/*\"  dist && copyfiles -u 2 \"src/templates/**/*\" \"node_modules/@loopback/rest-explorer/templates\"",
    "build:client": "yarn --cwd client build",
    "build:docs": "yarn --cwd docs install && yarn --cwd docs build",
    "build:watch": "lb-tsc --watch",
    "postbuild": "yarn build:client",
    "install:client": "yarn --cwd client install",
    "install:docs": "yarn --cwd docs install",
    "postinstall": "yarn install:client",
    "lint": "yarn prettier:check && yarn eslint",
    "lint:fix": "yarn eslint:fix && yarn prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "yarn prettier:cli -l",
    "prettier:fix": "yarn prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "yarn eslint -- --fix",
    "pretest": "yarn clean && yarn build",
    "test": "lb-nyc lb-mocha --allow-console-logs --timeout 19999 dist/__tests__",
    "posttest": "yarn lint",
    "test:dev": "yarn clean && yarn build:server && lb-nyc lb-mocha --timeout 19999 --allow-console-logs dist/__tests__",
    "docker:build": "docker build -t notify-bc .",
    "docker:run": "docker run -p 3000:3000 -d notify-bc",
    "migrate": "node ./dist/migrate",
    "openapi-spec": "node ./dist/openapi-spec",
    "start": "node .",
    "clean": "lb-clean dist/ */dist/ *.tsbuildinfo .eslintcache .nyc_output/ coverage/",
    "clean:all": "yarn clean && lb-clean */node_modules && rm -rf node_modules"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "Apache-2.0",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^7.0.7",
    "@loopback/boot": "^3.2.1",
    "@loopback/core": "^2.14.1",
    "@loopback/openapi-v3": "^5.1.4",
    "@loopback/repository": "^3.4.1",
    "@loopback/rest": "^9.1.3",
    "@loopback/rest-explorer": "^3.1.0",
    "@loopback/service-proxy": "^3.0.7",
    "async": "^3.0.1",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "cron": "^1.2.1",
    "cross-env": "^5.0.0",
    "crypto-random-string": "^3.3.0",
    "csvtojson": "^1.1.7",
    "ejs": "^2.5.7",
    "feedparser": "^2.2.0",
    "helmet": "^3.8.0",
    "ip-range-check": "0.0.2",
    "jmespath": "f-w/jmespath.js#semver:^1.0",
    "js-base64": "^3.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "loopback-connector-mongodb": "^5.5.0",
    "mailparser": "^2.3.2",
    "morgan": "^1.10.0",
    "node-getopt": "^0.2.3",
    "node-rsa": "^0.4.1",
    "nodemailer": "^4.1.2",
    "nodemailer-direct-transport": "^3.3.2",
    "pluralize": "^7.0.0",
    "randexp": "^0.4.3",
    "semver": "^5.3.0",
    "serve-favicon": "^2.5.0",
    "smtp-server": "^3.1.0",
    "tslib": "^2.0.0",
    "twilio": "^3.7.0",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "@loopback/build": "^6.2.9",
    "@loopback/eslint-config": "^10.0.5",
    "@loopback/testlab": "^3.2.12",
    "@types/bcryptjs": "^2.4.2",
    "@types/lodash": "^4.14.157",
    "@types/morgan": "^1.9.2",
    "@types/node": "^10.17.51",
    "connect-history-api-fallback": "^1.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.18.0",
    "smtp-connection": "^4.0.2",
    "source-map-support": "^0.5.19",
    "typescript": "~4.1.3"
  },
  "private": true
}
